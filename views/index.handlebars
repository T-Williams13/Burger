<h2>Burgers to be savoured</h2>

<ul class = "list">
  {{#each burgers}}
    {{#unless devoured}}
        <li class = "list">
            {{this.burger_name}}
            </li>
        <button class="change-devoured" data-id="{{id}}" >devour!</button>
        
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that went down smooth</h2>

<ul class = "list">
  {{#each burgers}}
    {{#if devoured}}
     <li class = "list">{{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  <button id = "submit" type="submit">Add Burger</button>
</form>
